{
    "compilerOptions": {
        "target": "ES2015",
        "useDefineForClassFields": true,
        "module": "ES6",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "./build",
        /* Bundler mode */
        "moduleResolution": "node",
        "allowImportingTsExtensions": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
}